<h6>dashboard</h6>
<h3>Welcom {{name}}</h3>
<p>Here you can write stories</p>

{{#if stories}}
  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      {{#each stories}}
         <tr>
           <td><a href="/stories/{{_id}}"></a>{{title}}</td>
           <td>{{formatDate createdAt "MMMM Do YYYY, hh:mm:ss a"}}</td>
           <td><span class="dash-status">{{status}}</span></td>
          <td></td>

         </tr>
      {{/each}}
    </tbody>

{{else}}


{{/if}}